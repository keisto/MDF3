<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:id="@+id/forward"
        android:background="#3F51B5"
        android:src="@drawable/ic_fast_forward_white_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:id="@+id/rewind"
        android:background="#3F51B5"
        android:src="@drawable/ic_fast_rewind_white_24dp"
        android:layout_below="@+id/forward"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/play"
        android:background="#3F51B5"
        android:src="@drawable/ic_play_arrow_white_24dp"
        android:layout_below="@+id/rewind"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/rewind"
        android:layout_above="@+id/imageButton4" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton4"
        android:background="#3F51B5"
        android:src="@drawable/ic_pause_white_24dp"
        android:layout_above="@+id/imageButton5"
        android:layout_alignStart="@+id/imageButton5" />

    <ImageButton
        android:layout_width="74dp"
        android:layout_height="60dp"
        android:id="@+id/imageButton5"
        android:background="#3F51B5"
        android:src="@drawable/ic_stop_white_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:background="#ccc"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageButton4" />

    <TextView
        android:layout_width="470dp"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Track"
        android:id="@+id/track"
        android:gravity="bottom|left"
        android:textColor="#333"
        android:textStyle="bold"
        android:layout_above="@+id/artist"
        android:layout_toRightOf="@+id/imageView7"
        android:paddingLeft="6dp" />

    <TextView
        android:layout_width="470dp"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Artist"
        android:id="@+id/artist"
        android:gravity="bottom|left"
        android:textColor="#333"
        android:textStyle="bold"
        android:layout_above="@+id/album"
        android:layout_toRightOf="@+id/imageView7"
        android:paddingLeft="6dp" />

    <TextView
        android:layout_width="470dp"
        android:layout_height="35dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Album"
        android:id="@+id/album"
        android:gravity="bottom|left"
        android:textColor="#333"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageView7"
        android:paddingLeft="6dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:src="@drawable/ic_music_note_black_36dp"
        android:padding="0dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:paddingLeft="6dp"
        android:paddingRight="6dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:src="@drawable/ic_face_black_36dp"
        android:padding="0dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentLeft="true"
        android:paddingLeft="6dp"
        android:paddingRight="6dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView7"
        android:src="@drawable/ic_album_black_36dp"
        android:padding="0dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView6"
        android:layout_alignParentLeft="true"
        android:paddingLeft="6dp"
        android:paddingRight="6dp" />

    <Switch
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Shuffle"
        android:id="@+id/shuffleSwitch"
        android:checked="false"
        android:longClickable="false"
        android:textColor="#ffffff"
        android:background="#6e000000"
        android:paddingRight="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="40dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_above="@+id/track"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageButton4" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:background="#6e000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/imageView"
        android:indeterminate="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/status"
        android:layout_alignParentStart="true"
        android:background="#6e000000"
        android:gravity="center"
        android:textColor="#fff"
        android:paddingBottom="10dp"
        android:layout_below="@+id/seekBar"
        android:layout_alignParentLeft="true"
        android:layout_alignEnd="@+id/imageView" />
</RelativeLayout>