<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.y_not.widget">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".List_View">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Detail_View"/>
        <activity android:name=".Form_View"/>
        <receiver android:name=".Contact_Provider">
        <intent-filter>
            <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            <action android:name="xyz.y_not.widget.ACTION_VIEW_DETAILS" />
        </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/contact_widget_settings" />
        </receiver>
        <service android:name=".Contact_Service"
            android:permission="android.permission.BIND_REMOTEVIEWS" />
    </application>

</manifest>
